<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373737"
    tools:visibility="visible">

    <Button
        android:id="@+id/TeleButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="107dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#433C3C"
        android:backgroundTintMode="add"
        android:onClick="setTele"
        android:text="TeleOp"
        android:textSize="24sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/AutoTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AutoTitle"
        app:layout_constraintTop_toTopOf="@id/AutoTitle" />

    <Button
        android:id="@+id/LowGoalBA"
        android:layout_width="176dp"
        android:layout_height="156dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="#000000"
        android:fontFamily="serif"
        android:onClick="addLowAuto"
        android:text="Low Goal:"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/MissedBA"
        app:layout_constraintEnd_toStartOf="@+id/HighGoalBA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AutoTitle" />

    <Button
        android:id="@+id/HighGoalBA"
        android:layout_width="176dp"
        android:layout_height="156dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="25dp"
        android:onClick="addHighAuto"
        android:text="High Goal:"
        android:fontFamily="serif"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/LowGoalBA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LowGoalBA"
        app:layout_constraintTop_toTopOf="@+id/LowGoalBA" />

    <Button
        android:id="@+id/MissedBA"
        android:layout_width="176dp"
        android:layout_height="156dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="281dp"
        android:onClick="addMissedShotAuto"
        android:text="Missed:"
        android:fontFamily="serif"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/LowGoalBA"
        app:layout_constraintStart_toStartOf="@id/LowGoalBA"
        app:layout_constraintTop_toBottomOf="@+id/LowGoalBA" />

    <Button
        android:id="@+id/TaxiBA"
        android:layout_width="176dp"
        android:layout_height="156dp"
        android:onClick="taxi"
        android:text="Taxi:"
        android:backgroundTint="@color/black"
        android:fontFamily="serif"
        android:textSize="24dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/MissedBA"
        app:layout_constraintEnd_toEndOf="@id/HighGoalBA"
        app:layout_constraintStart_toStartOf="@+id/HighGoalBA"
        app:layout_constraintTop_toTopOf="@+id/MissedBA" />

    <Button
        android:id="@+id/StealBA"
        android:layout_width="176dp"
        android:layout_height="156dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="130dp"
        android:backgroundTint="@color/black"
        android:fontFamily="serif"
        android:onClick="addSteal"
        android:text="Steal:"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MissedBA" />

    <Button
        android:id="@+id/FoulBA"
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/black"
        android:fontFamily="serif"
        android:onClick="addFoul"
        android:text="Foul"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/UndoBA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StealBA"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/UndoBA"
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/black"
        android:fontFamily="serif"
        android:text="Undo"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/FoulBA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FoulBA"
        app:layout_constraintTop_toTopOf="@+id/FoulBA" />

    <Button
        android:id="@+id/AutoTitle"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#534B4B"
        android:fontFamily="serif"
        android:text="Auto:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/LowGoalBA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>